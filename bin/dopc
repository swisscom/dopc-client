#!/usr/bin/env ruby

require 'thor'
require 'rest-client'
require 'json'

class CLI < Thor
  class_option :url, :default => 'http://localhost:3000'
  class_option :version, :default => '1'
  desc 'ping', 'Ping the API'
  def ping()
    r = RestClient.get "#{options[:url]}/api/v#{options[:version]}/ping", {accept: :json}
    j = JSON.parse(r.body)
    puts "#{r.code}: #{j['text']}"
  end
end

CLI.start(ARGV)
